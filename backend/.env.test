# Test Environment Configuration
APP_NAME="Course Management Platform Test"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database - Test SQLite
DATABASE_URL=sqlite+aiosqlite:///./test.db

# Supabase - Test credentials
SUPABASE_URL=https://test-project.supabase.co
SUPABASE_KEY=test-anon-key-for-testing-only
SUPABASE_JWT_SECRET=test-jwt-secret-key-for-testing-minimum-32-chars

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MinIO - Test credentials
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=test-access-key
MINIO_SECRET_KEY=test-secret-key-for-testing
MINIO_BUCKET_NAME=test-bucket
MINIO_SECURE=False

# Security - Test key
SECRET_KEY=test-secret-key-for-testing-minimum-32-characters-long

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_FILE_SIZE=104857600

# WebSocket
WS_MESSAGE_QUEUE=ws:messages
WS_HEARTBEAT_INTERVAL=30

# Cache TTL
CACHE_USER_PROFILE_TTL=3600
CACHE_COURSE_TTL=3600
CACHE_COURSE_MEMBERS_TTL=1800
CACHE_MESSAGES_TTL=600
CACHE_NOTIFICATIONS_TTL=300
